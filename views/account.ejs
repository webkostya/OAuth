<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= title %></title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/style.css" />
</head>
<body>
    <nav class="navbar navbar-light bg-light mb-5">
        <a href="/" class="navbar-brand">OAuth</a>

        <form action="/logout" class="form-inline">
            <button type="submit" class="btn btn-success my-2 my-sm-0">Logout</button>
        </form>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="main bg-light">
                    <img src="<%= data.photo_200 %>" class="avatar" alt="...">
                    <strong><%= data.first_name %> <%= data.last_name %></strong>
                </div>
            </div>
            <div class="col-lg-9">
                <% for(var i=0; i < users.length; i++) { %>
                    <div class="row align-items-center user">
                        <div class="col-auto">
                            <img src="<%= users[i].photo_100 %>" class="avatar" alt="...">
                        </div>
                         
                        <div class="col">
                            <span><%= users[i].first_name %> <%= users[i].last_name %></span>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>